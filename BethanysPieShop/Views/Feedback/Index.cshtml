@model FeedbackViewModel
@{
    ViewData["Title"] = "Feedback";
}

<h2>Feedback</h2>

<form asp-action="Index" method="post" class="form-horizontal" role="form">

    <div asp-validation-summary="All" class="text-danger validation-summary"></div>

    <div class="form-group">
        <label asp-for="FeedbackForm.Name" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="FeedbackForm.Name" class="form-control" />
            <span asp-validation-for="FeedbackForm.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="FeedbackForm.Email" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="FeedbackForm.Email" class="form-control" />
            <span asp-validation-for="FeedbackForm.Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="FeedbackForm.Message" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <textarea asp-for="FeedbackForm.Message" class="form-control"></textarea>
            <span asp-validation-for="FeedbackForm.Message" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="FeedbackForm.ContactMe" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input type="checkbox" asp-for="FeedbackForm.ContactMe" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Send feedback" />
        </div>
    </div>

</form>